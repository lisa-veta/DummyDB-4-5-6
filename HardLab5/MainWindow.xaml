<Window x:Class="HardLab5.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HardLab5"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="600">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="20*"/>
            <RowDefinition Height="20*"/>
            <RowDefinition Height="10*"/>
            <RowDefinition Height="520*"/>
            <RowDefinition Height="10*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="10*" />
            <ColumnDefinition Width="285*" />
            <ColumnDefinition Width="10*" />
            <ColumnDefinition Width="285*" />
            <ColumnDefinition Width="10*" />
        </Grid.ColumnDefinitions>
        <Menu VerticalAlignment="Center" Grid.Column="1" Grid.ColumnSpan="3">
            <MenuItem Header="File" >
                <MenuItem Header="Open Data" Click="OpenDataFile"/>
            </MenuItem>
        </Menu>

        <TextBlock Grid.Column="1" Grid.Row ="1" Text="Source database structure" Background="Yellow" ></TextBlock>
        <TextBlock Grid.Column="3" Grid.Row ="1" Text="Table" Background="Yellow"></TextBlock>

        <TreeView Grid.Column="1" Grid.Row="3">
            <TreeViewItem Name="folderTree"/>
        </TreeView>
        <DataGrid Grid.Column="3" Grid.Row="3" Name="DataTable" AutoGenerateColumns="False"/>
    </Grid>
</Window>
